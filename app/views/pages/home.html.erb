<div class="container mt-4">
  <%= link_to "https://www.kthps.org/donate", target: "_blank", class: "card rounded-4", style: "text-decoration: none; color: inherit;" do %>
    <div>
      <%= image_tag "banner.png", class: "card-img-top custom-banner-mobile custom-banner-desktop img-fluid", style: "border-radius: 0.5rem 0.5rem 0 0"%>
      <div class="card-body">
        <h5 class="card-title">Dona a KTH</h5>
        <p class="card-text">El dinero recaudado se destina a reunir recursos para apoyar la causa y formar líderes de la diáspora Palestina.</p>
      </div>
    </div>
  <% end %>
  <div class="d-flex align-items-center justify-content-between mt-5 mb-3">
    <h2 class="fw-bold me-3">Marcas</h2>
    <%= link_to "Ver todas las marcas", businesses_path, class: "btn btn-outline-success" %>
  </div>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @businesses.each do |b| %>
    <div class="col">
      <div class="card rounded-4">
        <div class="card-body">
          <h5>
            <%= Subcategory.find(b.subcategory_id).icon.html_safe %>
            <%= b.name %>
          </h5>
          <small class="text-body-tertiary"><%= Subcategory.find(b.subcategory_id).name %></small>
          <p class="card-text mt-2"><%= b.description %></p>
          <%= link_to "Ver más", business_path(b), class: "btn btn-success text-white" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>

<script>
  document.querySelector('#filter-form').addEventListener('submit', function(event) {
    document.querySelector('#marcas').scrollIntoView({ behavior: 'smooth' });
  });
</script>
