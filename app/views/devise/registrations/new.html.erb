<div class="container mt-5">
  <h2 class="fw-bold mb-4">Crear cuenta</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "row g-3" }) do |f| %>
    <%= f.error_notification %>
    <div class="col-md-4">
      <%= f.input :name,
                  required: true,
                  autofocus: true,
                  label: "Nombre",
                  input_html: { autocomplete: "name" } %>
    </div>
    <div class="col-md-4">
      <%= f.input :first_last_name,
                  required: true,
                  autofocus: true,
                  label: "Primer apellido",
                  input_html: { autocomplete: "first_last_name" } %>
    </div>
    <div class="col-md-4">
      <%= f.input :second_last_name,
                  required: true,
                  autofocus: true,
                  label: "Segundo apellido",
                  input_html: { autocomplete: "second_last_name" } %>
    </div>
    <div class="col-6">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  label: "Email",
                  input_html: { autocomplete: "email" } %>
    </div>
    <div class="col-6">
      <%= f.input :phone,
                  required: true,
                  autofocus: true,
                  label: "Teléfono (+56 )",
                  input_html: { autocomplete: "phone" } %>
    </div>
    <div class="col-md-4">
      <%= f.input :birth,
                  required: true,
                  autofocus: true,
                  start_year: Date.today.year - 14,
                  end_year: Date.today.year - 120,
                  label: "Fecha de nacimiento",
                  input_html: { autocomplete: "birth" } %>
    </div>
    <div class="col-md-4">
      <%= f.association :gender,
                        required: true,
                        label: "Género",
                        input_html: { autocomplete: "gender_id" } %>
    </div>
    <div class="col-md-4">
      <%= f.association :origen,
                        required: true,
                        label_method: :country,
                        label: "Origen",
                        input_html: { autocomplete: "origen_id" } %>
    </div>
    <div class="col-6">
      <%= f.input :password,
                required: true,
                hint: ("Mínimo #{@minimum_password_length} caracteres" if @minimum_password_length),
                label: "Contraseña",
                input_html: { autocomplete: "new-password" } %>
    </div>
    <div class="col-6">
      <%= f.input :password_confirmation,
                required: true,
                label: "Confirmar contraseña",
                input_html: { autocomplete: "new-password" } %>
    </div>
    <div class="col-12">
      <%= f.button :submit, "Crear cuenta", class: "btn btn-success rounded-4" %>
    </div>
    <% end %>

  <%= render "devise/shared/links" %>
  </form>
</div>
